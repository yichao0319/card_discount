<%= form_for @discount do |f| %>

  <% if @discount.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@discount.errors.count, "error") %> prohibited
        this discount from being saved:
      </h2>
      <ul>
        <% @discount.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :brief_description %><br>
    <%= f.text_field :brief_description %>
  </div>

  <div class="field">
    <%= f.label :complete_description %><br>
    <%= f.text_field :complete_description %>
  </div>

  <div class="field">
    <%= f.label :start_date %><i>(mm-dd-yyyy)</i><br>
    <%= f.date_field :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %><i>(mm-dd-yyyy)</i><br />
    <%= f.date_field :end_date %>
  </div>

  <div class="field">
    <%= f.label :discount_index %><br>
    <%= f.text_field :discount_index %>
  </div>

  <div class="field">
    <%= f.label :reference %><br>
    <%= f.text_field :reference %>
  </div>

  <div class="field">
    <%= f.label :notice %><br>
    <%= f.text_field :notice %>
  </div>

  <div class="field">
    <%= f.label :group %><br>
    <%= f.collection_select :group_id, Group.order(:name),:id,:name, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :store %><br>
    <%= f.collection_select :store_info_id, StoreInfo.order(:name),:id,:name, include_blank: true %>
  </div>

  <BR>
  <%= f.fields_for :discount_requirement_sets do |builder| %>
    <%= render "discount_requirement_set_form", :f => builder %>
    <BR>
  <% end %>
  
  <BR>
  <p><%= link_to_add_fields "Add Requirement", f, :discount_requirement_sets %></p>
  <BR>
  

  <div class="field">
    <%= f.submit %>
  </div>

<% end %>