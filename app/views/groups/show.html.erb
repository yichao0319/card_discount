<p>
    <strong>Name:</strong>
    <%= @group.name %>
</p>
 
<p>
    <strong>Photo:</strong>
    <%= image_tag logo_group_path(@group) %>
</p>

<p>
    <strong>Stores:</strong><BR>
    <% @group.store_infos.each do |store| %>
        <%= store.name %><BR>
    <% end %>
